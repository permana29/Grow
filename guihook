CopyBtn.TextColor3 = Color3.fromRGB(255,255,255)

local ClearBtn = Instance.new("TextButton", DetailFrame)
ClearBtn.Size = UDim2.new(0,80,0,30)
ClearBtn.Position = UDim2.new(0,180,1,-35)
ClearBtn.Text = "Clear"
ClearBtn.Font = Enum.Font.Code
ClearBtn.TextSize = 16
ClearBtn.BackgroundColor3 = Color3.fromRGB(80,20,20)
ClearBtn.TextColor3 = Color3.fromRGB(255,255,255)

-- Variabel data
local scannedRemotes = {}
local logs = {}

-- Fungsi untuk scan remote
local function scanRemotes()
    ListFrame:ClearAllChildren()
    for _, obj in ipairs(ReplicatedStorage:GetDescendants()) do
        if obj:IsA("RemoteEvent") or obj:IsA("RemoteFunction") then
            local btn = Instance.new("TextButton")
            btn.Size = UDim2.new(1, -10, 0, 25)
            btn.BackgroundColor3 = Color3.fromRGB(40,40,40)
            btn.TextColor3 = Color3.fromRGB(255,255,255)
            btn.Text = obj.Name
            btn.Font = Enum.Font.Code
            btn.TextSize = 15
            btn.Parent = ListFrame

            btn.MouseButton1Click:Connect(function()
                local details = 
                    "Name: "..obj.Name.."\n"..
                    "Class: "..obj.ClassName.."\n"..
                    "Path: "..obj:GetFullName().."\n\n"..
                    "Properties:\n"..
                    "  Archivable: "..tostring(obj.Archivable).."\n"..
                    "  ClassName: "..obj.ClassName.."\n"

                if logs[obj] and #logs[obj] > 0 then
                    details = details.."\nLogs:\n"..table.concat(logs[obj], "\n")
                end

                DetailBox.Text = details
                DetailFrame.Visible = true
                ListFrame.Visible = false

                -- Copy
                CopyBtn.MouseButton1Click:Connect(function()
                    setclipboard(DetailBox.Text)
                end)

                -- Clear log
                ClearBtn.MouseButton1Click:Connect(function()
                    logs[obj] = {}
                    DetailBox.Text = details
                end)

                -- Back
                BackBtn.MouseButton1Click:Connect(function()
                    DetailFrame.Visible = false
                    ListFrame.Visible = true
                end)
            end)
        end
    end
end

-- Close
CloseBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
end)

-- Pertama kali scan
scanRemotes()
