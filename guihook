-- 🔥 Menu Executor dengan Sniff Remote (Log Viewer) 🔥
-- Aman hanya log (tidak eksekusi otomatis)

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local UserInputService = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")

-- Buat ScreenGui utama
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ExecutorMenu"
screenGui.Parent = CoreGui

-- Frame Utama
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 300, 0, 200)
mainFrame.Position = UDim2.new(0.5, -150, 0.5, -100)
mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 40)
title.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
title.Text = "🚀 Script Executor Menu"
title.TextColor3 = Color3.new(1, 1, 1)
title.Font = Enum.Font.GothamBold
title.TextSize = 18
title.Parent = mainFrame

-- Container Menu
local menuContainer = Instance.new("Frame")
menuContainer.Size = UDim2.new(1, 0, 1, -40)
menuContainer.Position = UDim2.new(0, 0, 0, 40)
menuContainer.BackgroundTransparency = 1
menuContainer.Parent = mainFrame

-- Fungsi bikin tombol
local function createButton(text, order, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, -20, 0, 40)
    btn.Position = UDim2.new(0, 10, 0, (order - 1) * 45)
    btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    btn.Text = text
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 16
    btn.Parent = menuContainer
    btn.MouseButton1Click:Connect(callback)
    return btn
end

-- Fungsi buat halaman Sniffer
local function openSniffer()
    menuContainer:ClearAllChildren()

    local logBox = Instance.new("ScrollingFrame")
    logBox.Size = UDim2.new(1, -20, 1, -60)
    logBox.Position = UDim2.new(0, 10, 0, 10)
    logBox.CanvasSize = UDim2.new(0, 0, 0, 0)
    logBox.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    logBox.BorderSizePixel = 0
    logBox.ScrollBarThickness = 6
    logBox.Parent = menuContainer

    local UIList = Instance.new("UIListLayout")
    UIList.Parent = logBox
    UIList.SortOrder = Enum.SortOrder.LayoutOrder

    -- Tombol Back
    local backBtn = Instance.new("TextButton")
    backBtn.Size = UDim2.new(1, -20, 0, 40)
    backBtn.Position = UDim2.new(0, 10, 1, -45)
    backBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    backBtn.Text = "⬅ Back"
    backBtn.TextColor3 = Color3.new(1, 1, 1)
    backBtn.Font = Enum.Font.Gotham
    backBtn.TextSize = 16
    backBtn.Parent = menuContainer

    backBtn.MouseButton1Click:Connect(function()
        menuContainer:ClearAllChildren()
        createMainMenu()
    end)

    -- Fungsi buat nambah log
    local function addLog(msg)
        local lbl = Instance.new("TextLabel")
        lbl.Size = UDim2.new(1, -10, 0, 20)
        lbl.BackgroundTransparency = 1
        lbl.Text = msg
        lbl.TextColor3 = Color3.new(1, 1, 1)
        lbl.Font = Enum.Font.Code
        lbl.TextSize = 14
        lbl.TextXAlignment = Enum.TextXAlignment.Left
        lbl.Parent = logBox
        logBox.CanvasSize = UDim2.new(0, 0, 0, UIList.AbsoluteContentSize.Y + 10)
    end

    -- Sniffer RemoteEvent & RemoteFunction
    for _, obj in ipairs(game:GetDescendants()) do
        if obj:IsA("RemoteEvent") then
            obj.OnClientEvent:Connect(function(...)
                addLog("[RemoteEvent] " .. obj.Name .. " -> " .. tostring(...))
            end)
        elseif obj:IsA("RemoteFunction") then
            obj.OnClientInvoke = function(...)
                addLog("[RemoteFunction] " .. obj.Name .. " -> " .. tostring(...))
            end
        end
    end
end

-- Fungsi Main Menu
function createMainMenu()
    createButton("▶ Load Script", 1, function()
        print("⚡ Load Script di sini...")
    end)
    createButton("🔍 Sniffer Remote", 2, function()
        openSniffer()
    end)
end

-- Start
createMainMenu()
