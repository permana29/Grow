-- Variables
local currentRemote = nil
local logs = {}
local connections = {}

-- Utility: format args
local function formatArgs(args)
    local output = {}
    for i,v in ipairs(args) do
        if typeof(v) == "table" then
            table.insert(output, "["..i.."] = " .. HttpService:JSONEncode(v))
        else
            table.insert(output, "["..i.."] = " .. tostring(v))
        end
    end
    return table.concat(output, "\n")
end

-- Add log to DataTab
local function addLog(text)
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -10, 0, 40)
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.TextYAlignment = Enum.TextYAlignment.Top
    label.BackgroundTransparency = 1
    label.TextWrapped = true
    label.TextColor3 = Color3.new(1,1,1)
    label.Font = Enum.Font.Code
    label.TextSize = 14
    label.Text = text
    label.Parent = DataTab
    DataTab.CanvasSize = UDim2.new(0, 0, 0, #DataTab:GetChildren() * 45)
end

-- Hook remote
local function hookRemote(remote)
    for _,con in ipairs(connections) do
        con:Disconnect()
    end
    connections = {}
    currentRemote = remote
    DataTab:ClearAllChildren()
    logs = {}

    if remote:IsA("RemoteEvent") then
        table.insert(connections, remote.OnClientEvent:Connect(function(...)
            local log = "[RemoteEvent] "..remote:GetFullName().."\n"..formatArgs({...}).."\n----------------"
            addLog(log)
            table.insert(logs, log)
        end))
    elseif remote:IsA("RemoteFunction") then
        local old; old = hookfunction(remote.InvokeServer, function(self, ...)
            local log = "[RemoteFunction] "..self:GetFullName().."\n"..formatArgs({...}).."\n----------------"
            addLog(log)
            table.insert(logs, log)
            return old(self, ...)
        end)
    end

    RescanTab.Visible = false
    DataTab.Visible = true
end

-- Refresh remotes list
local function rescan()
    RescanTab:ClearAllChildren()
    local y = 0
    for _,desc in ipairs(game:GetDescendants()) do
        if desc:IsA("RemoteEvent") or desc:IsA("RemoteFunction") then
            local btn = Instance.new("TextButton")
            btn.Size = UDim2.new(1, -10, 0, 25)
            btn.Position = UDim2.new(0, 5, 0, y)
            btn.Text = desc:GetFullName()
            btn.BackgroundColor3 = Color3.fromRGB(60,60,60)
            btn.TextColor3 = Color3.new(1,1,1)
            btn.TextXAlignment = Enum.TextXAlignment.Left
            btn.Parent = RescanTab
            btn.MouseButton1Click:Connect(function()
                hookRemote(desc)
            end)
            y = y + 30
        end
    end
    RescanTab.CanvasSize = UDim2.new(0, 0, 0, y)
end

-- Buttons
RescanButton.MouseButton1Click:Connect(rescan)
BackButton.MouseButton1Click:Connect(function()
    RescanTab.Visible = true
    DataTab.Visible = false
end)
CopyButton.MouseButton1Click:Connect(function()
    if #logs > 0 then
        setclipboard(table.concat(logs, "\n"))
    end
end)
ClearButton.MouseButton1Click:Connect(function()
    DataTab:ClearAllChildren()
    logs = {}
end)
CloseButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

local minimized = false
MinimizeButton.MouseButton1Click:Connect(function()
    minimized = not minimized
    MainFrame.Visible = not minimized
end)

-- Run first scan
rescan()
