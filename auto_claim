return function(Parent)

    local fruits = {"Apple","Banana","Orange","Mango","Grape"}
    local autoAll, autoSelect, selectedFruit = false, false, nil

    local function claimFruit(name)
        print("Claimed:", name)
        -- ganti dengan remote event game kamu:
        -- game:GetService("ReplicatedStorage").Events.ClaimFruit:FireServer(name)
    end

    -- loop auto claim all
    task.spawn(function()
        while task.wait(1) do
            if autoAll then
                for _,f in ipairs(fruits) do claimFruit(f) end
            end
        end
    end)

    -- loop auto claim selected
    task.spawn(function()
        while task.wait(1) do
            if autoSelect and selectedFruit then
                claimFruit(selectedFruit)
            end
        end
    end)

    local uiList = Instance.new("UIListLayout", Parent)
    uiList.Padding = UDim.new(0,6)
    uiList.HorizontalAlignment = Enum.HorizontalAlignment.Center

    -- Button Auto All
    local allBtn = Instance.new("TextButton")
    allBtn.Size = UDim2.new(0.9,0,0,30)
    allBtn.Text = "Auto Claim Semua: OFF"
    allBtn.BackgroundColor3 = Color3.fromRGB(55,55,55)
    allBtn.TextColor3 = Color3.fromRGB(255,255,255)
    allBtn.Font = Enum.Font.GothamBold
    allBtn.Parent = Parent
    Instance.new("UICorner", allBtn).CornerRadius = UDim.new(0,6)
    allBtn.MouseButton1Click:Connect(function()
        autoAll = not autoAll
        allBtn.Text = "Auto Claim Semua: " .. (autoAll and "ON" or "OFF")
    end)

    -- Button Dropdown (cycle)
    local dropBtn = Instance.new("TextButton")
    dropBtn.Size = UDim2.new(0.9,0,0,30)
    dropBtn.Text = "Pilih Buah: -"
    dropBtn.BackgroundColor3 = Color3.fromRGB(55,55,55)
    dropBtn.TextColor3 = Color3.fromRGB(255,255,255)
    dropBtn.Font = Enum.Font.GothamBold
    dropBtn.Parent = Parent
    Instance.new("UICorner", dropBtn).CornerRadius = UDim.new(0,6)
    local idx = 0
    dropBtn.MouseButton1Click:Connect(function()
        idx = (idx % #fruits) + 1
        selectedFruit = fruits[idx]
        dropBtn.Text = "Pilih Buah: " .. selectedFruit
    end)

    -- Button Auto Selected
    local selBtn = Instance.new("TextButton")
    selBtn.Size = UDim2.new(0.9,0,0,30)
    selBtn.Text = "Auto Claim Pilihan: OFF"
    selBtn.BackgroundColor3 = Color3.fromRGB(55,55,55)
    selBtn.TextColor3 = Color3.fromRGB(255,255,255)
    selBtn.Font = Enum.Font.GothamBold
    selBtn.Parent = Parent
    Instance.new("UICorner", selBtn).CornerRadius = UDim.new(0,6)
    selBtn.MouseButton1Click:Connect(function()
        autoSelect = not autoSelect
        selBtn.Text = "Auto Claim Pilihan: " .. (autoSelect and "ON" or "OFF")
    end)
end
