-- FRAME UTAMA
local FruitFrame = Instance.new("Frame")
FruitFrame.Size = UDim2.new(0, 250, 0, 200) -- bikin fix height
FruitFrame.Position = UDim2.new(0.5, -125, 0.5, -100)
FruitFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)

-- TITLE
local Title = Instance.new("TextLabel", FruitFrame)
Title.Size = UDim2.new(1, 0, 0, 30)
Title.BackgroundTransparency = 1
Title.Text = "üçè Select Fruit"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 14

-- SCROLLING LIST
local Scroll = Instance.new("ScrollingFrame", FruitFrame)
Scroll.Size = UDim2.new(1, -10, 1, -40) -- sisakan space buat tombol di bawah
Scroll.Position = UDim2.new(0, 5, 0, 35)
Scroll.CanvasSize = UDim2.new(0, 0, 0, 0)
Scroll.ScrollBarThickness = 4
Scroll.BackgroundTransparency = 1

-- Tambahin list fruits
local Fruits = {"Apple", "Banana", "Mango", "Strawberry", "Grapes", "Watermelon"}
local UIList = Instance.new("UIListLayout", Scroll)
UIList.Padding = UDim.new(0, 5)

for _, fruit in ipairs(Fruits) do
    local Btn = Instance.new("TextButton", Scroll)
    Btn.Size = UDim2.new(1, -10, 0, 25)
    Btn.Text = fruit
    Btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    Btn.TextColor3 = Color3.fromRGB(255,255,255)

    Btn.MouseButton1Click:Connect(function()
        print("Selected: "..fruit)
    end)
end

-- UPDATE canvas size biar bisa scroll
UIList:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
    Scroll.CanvasSize = UDim2.new(0,0,0,UIList.AbsoluteContentSize.Y)
end)

-- TOMBOL AUTO CLAIM
local AutoBtn = Instance.new("TextButton", FruitFrame)
AutoBtn.Size = UDim2.new(1, -20, 0, 30)
AutoBtn.Position = UDim2.new(0, 10, 1, -35)
AutoBtn.Text = "Auto Claim: OFF"
AutoBtn.BackgroundColor3 = Color3.fromRGB(120, 0, 0)
AutoBtn.TextColor3 = Color3.fromRGB(255,255,255)

local toggled = false
AutoBtn.MouseButton1Click:Connect(function()
    toggled = not toggled
    AutoBtn.Text = "Auto Claim: "..(toggled and "ON" or "OFF")
    AutoBtn.BackgroundColor3 = toggled and Color3.fromRGB(0,120,0) or Color3.fromRGB(120,0,0)
end)
