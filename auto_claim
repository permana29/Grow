-- Auto Claim GUI (Rayfield Style)

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "üçè Auto Claim",
    LoadingTitle = "Loading Auto Claim...",
    LoadingSubtitle = "By Permana",
    ConfigurationSaving = {
       Enabled = false,
    }
})

-- Tab utama
local MainTab = Window:CreateTab("Main", 4483362458) -- icon id bebas

-- Dropdown pilih buah
local SelectedFruit = "None"
local FruitDropdown = MainTab:CreateDropdown({
    Name = "Select Fruit",
    Options = {"Apple","Banana","Mango","Strawberry","Grapes","Watermelon"},
    CurrentOption = {"None"},
    MultipleOptions = false,
    Flag = "FruitChoice",
    Callback = function(Option)
        SelectedFruit = Option[1]
        Rayfield:Notify({
            Title = "Fruit Selected",
            Content = "You selected: "..SelectedFruit,
            Duration = 2
        })
    end,
})

-- Toggle Auto Claim Selected Fruit
local AutoSelected = false
MainTab:CreateToggle({
    Name = "Auto Claim Selected Fruit",
    CurrentValue = false,
    Flag = "AutoSelected",
    Callback = function(Value)
        AutoSelected = Value
        if AutoSelected then
            print("Auto Claiming: "..SelectedFruit)
        else
            print("Stopped Auto Claim Selected Fruit")
        end
    end,
})

-- Toggle Auto Claim Semua Fruits
local AutoAll = false
MainTab:CreateToggle({
    Name = "Auto Claim All Fruits",
    CurrentValue = false,
    Flag = "AutoAll",
    Callback = function(Value)
        AutoAll = Value
        if AutoAll then
            print("Auto Claiming ALL Fruits")
        else
            print("Stopped Auto Claim ALL Fruits")
        end
    end,
})
