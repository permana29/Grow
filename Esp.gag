local function addLog(msg)
	local lbl = Instance.new("TextLabel")
	lbl.Size = UDim2.new(1, -4, 0, 18)
	lbl.BackgroundTransparency = 1
	lbl.Font = Enum.Font.Code
	lbl.TextSize = 14
	lbl.TextXAlignment = Enum.TextXAlignment.Left
	lbl.TextColor3 = Color3.fromRGB(0,200,255)
	lbl.Text = msg
	lbl.Parent = LogFrame
end

local hatchLogging = false

Script4Btn.MouseButton1Click:Connect(function()
	if hatchLogging then
		Script4Btn.Text = "ðŸ“œ Log Hatch: OFF"
		hatchLogging = false
		LogFrame.Visible = false
		return
	end

	hatchLogging = true
	Script4Btn.Text = "ðŸ“œ Log Hatch: ON"
	LogFrame.Visible = true

	local rs = game:GetService("ReplicatedStorage")
	for _, obj in ipairs(rs:GetDescendants()) do
		if obj:IsA("RemoteEvent") or obj:IsA("RemoteFunction") then
			local lname = string.lower(obj.Name)
			if string.find(lname, "egg") or string.find(lname, "hatch") then
				addLog("[Hooked] "..obj.Name)
				if obj:IsA("RemoteEvent") then
					obj.OnClientEvent:Connect(function(...)
						addLog("[Event] "..obj.Name)
					end)
				elseif obj:IsA("RemoteFunction") then
					local old; old = hookfunction(obj.InvokeServer, function(self, ...)
						addLog("[Function] "..self.Name)
						return old(self, ...)
					end)
				end
			end
		end
	end
end)

