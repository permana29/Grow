BtnSvcWhenReady.MouseButton1Click:Connect(function()
    if eggReady then
        appendLog("[Reroll] Status: Ready sudah TRUE, kirim sekarang.")
        doSend(lastPayload.PetEggService)
        return
    end
    appendLog("[Reroll] Menunggu EggReadyToHatch_RE...")
    task.spawn(function()
        local started = os.clock()
        local timeout = 20 -- detik
        while os.clock()-started < timeout do
            if eggReady then break end
            task.wait(0.1)
        end
        if eggReady then
            appendLog("[Reroll] Ready diterima. Mengirim PetEggService terakhir.")
            doSend(lastPayload.PetEggService)
        else
            appendLog("[Reroll] Timeout menunggu Ready. Kirim tetap dipaksa.")
            doSend(lastPayload.PetEggService)
        end
    end)
end)

