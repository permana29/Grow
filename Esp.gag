UIListLayout.FillDirection = Enum.FillDirection.Vertical
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIListLayout.Parent = Content

-- Fungsi animasi tombol
local function AnimateButtonPress(button)
    button.BackgroundColor3 = PALETTE.Accent
    task.delay(0.15, function()
        button.BackgroundColor3 = PALETTE.Secondary
    end)
end

-- Template tombol
local function CreateButton(name, text, order, callback)
    local Button = Instance.new("TextButton")
    Button.Name = name
    Button.Size = UDim2.new(1, 0, 0, 30)
    Button.Font = UI_FONT_BOLD
    Button.Text = text
    Button.TextSize = 14
    Button.TextColor3 = PALETTE.TextPrimary
    Button.BackgroundColor3 = PALETTE.Secondary
    Button.LayoutOrder = order
    Button.ClipsDescendants = true

    local Corner = Instance.new("UICorner")
    Corner.CornerRadius = UDim.new(0, 6)
    Corner.Parent = Button

    local Stroke = Instance.new("UIStroke")
    Stroke.Color = PALETTE.Accent
    Stroke.Thickness = 1
    Stroke.Parent = Button

    Button.Parent = Content

    Button.MouseButton1Click:Connect(function()
        AnimateButtonPress(Button)
        if callback then
            callback()
        end
    end)

    return Button
end

