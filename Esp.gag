-- Append log helper
function appendLog(msg)
	LogBox.Text = LogBox.Text .. msg .. "\n"
	LogScroll.CanvasSize = UDim2.new(0,0,0,LogBox.TextBounds.Y + 20)
end

--== Hook Egg Events (contoh) ==--
task.spawn(function()
	local rs = game:GetService("ReplicatedStorage")
	for _, evName in ipairs({"EggReadyToHatch_RE","PetEggService","EggTutorial","BuyPetEgg"}) do
		local ev = rs:FindFirstChild(evName, true)
		if ev and ev:IsA("RemoteEvent") then
			appendLog("[Hooked] "..evName)
			ev.OnClientEvent:Connect(function(...)
				appendLog("["..evName.."] ".. game:GetService("HttpService"):JSONEncode({...}))
			end)
		end
	end
end)

