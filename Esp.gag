local function resizeLog()
    local txt = LogBox.Text
    local bounds = TextService:GetTextSize(txt=="" and " " or txt, LogBox.TextSize, LogBox.Font, Vector2.new(LogScroll.AbsoluteSize.X-4, math.huge))
    LogBox.Size = UDim2.new(1, -4, 0, math.max(bounds.Y+8, LogScroll.AbsoluteSize.Y))
    LogScroll.CanvasSize = UDim2.new(0, 0, 0, LogBox.AbsoluteSize.Y)
    LogScroll.CanvasPosition = Vector2.new(0, LogScroll.CanvasSize.Y.Offset) -- autoscroll bottom
end

local function appendLog(line)
    LogBox.Text = (LogBox.Text == "" and "" or (LogBox.Text.."\n")) .. line
    LogBox.CursorPosition = #LogBox.Text + 1
    resizeLog()
end

