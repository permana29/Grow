-- helper cari GUI bawaan ESP
local function getEggOracleGui()
	for _, pg in ipairs(game.Players.LocalPlayer:WaitForChild("PlayerGui"):GetChildren()) do
		if pg:IsA("ScreenGui") and pg.Name == "EggOracle_Container" then
			return pg
		end
	end
	for _, cg in ipairs(game.CoreGui:GetChildren()) do
		if cg:IsA("ScreenGui") and cg.Name == "EggOracle_Container" then
			return cg
		end
	end
	return nil
end

-- Toggle ESP via tombol asli
local function toggleESP(container, forceState)
	if not container then return end
	local panel = container:FindFirstChild("ControlPanel")
	local content = panel and panel:FindFirstChild("Content")
	local btn = content and content:FindFirstChild("ToggleButton")
	if not btn or not btn:IsA("TextButton") then return end

	local function isOn() return btn.Text:find("ON") ~= nil end

	if forceState == nil then
		firesignal(btn.MouseButton1Click)
	else
		if forceState and not isOn() then
			firesignal(btn.MouseButton1Click)
		elseif (forceState == false) and isOn() then
			firesignal(btn.MouseButton1Click)
		end
	end
end

-- Hide UI bawaan
local function hideOracleUI(container)
	if not container then return end
	if container:FindFirstChild("ControlPanel") then container.ControlPanel.Visible = false end
	if container:FindFirstChild("ShowButton") then container.ShowButton.Visible = false end
end

local ESP_LOADED = false
local ESP_ON = false

Script2Btn.MouseButton1Click:Connect(function()
	local container = getEggOracleGui()
	if not ESP_LOADED or not container then
		local ok, err = pcall(function()
			loadstring(game:HttpGet("https://raw.githubusercontent.com/permana29/Grow/refs/heads/main/Esp_egg"))()
		end)
		if not ok then warn("Gagal load ESP: "..tostring(err)) return end

		container = getEggOracleGui()
		if not container then return end
		hideOracleUI(container)
		toggleESP(container, true)
		ESP_LOADED, ESP_ON = true, true
		Script2Btn.Text = "ðŸ¥š ESP: ON"
	else
		toggleESP(container, nil)
		local btn = container.ControlPanel.Content.ToggleButton
		ESP_ON = btn.Text:find("ON") ~= nil
		Script2Btn.Text = ESP_ON and "ðŸ¥š ESP: ON" or "ðŸ¥š ESP: OFF"
	end
end)

