-- Rekam payload relevan tanpa mengganggu call asli, dan hindari recursive (checkcaller)
local lastPayload = {
    BuyPetEgg = nil,               -- {remote, method, args}
    PetEggService = nil,           -- {remote, method, args, action}
}
local lastSvcList = {}             -- simpan beberapa call PetEggService terakhir (maks 10)
local eggReady = false

-- Hook server->client (untuk status "Ready")
local function hookServerEvents()
    local GE = RS:FindFirstChild("GameEvents")
    if not GE then return end
    local function hookEvent(ev, name)
        if ev and ev.OnClientEvent then
            ev.OnClientEvent:Connect(function(...)
                local arr = {...}
                appendLog(string.format("[Event] %s %s", name, tstr(arr)))
                if name=="EggReadyToHatch_RE" then eggReady = true end
            end)
            appendLog(string.format("[Hooked] %s", name))
        end
    end
    hookEvent(GE:FindFirstChild("EggReadyToHatch_RE"), "EggReadyToHatch_RE")
    hookEvent(GE:FindFirstChild("EggTutorial"), "EggTutorial")
end
hookServerEvents()

-- __namecall hook (prefer hookmetamethod kalau ada)
local hooked = false
do
    local function record(remote, method, args)
        if not (remote and (method=="FireServer" or method=="InvokeServer")) then return end
        if remote.Name == "BuyPetEgg" then
            lastPayload.BuyPetEgg = {remote=remote, method=method, args=args}
            appendLog(string.format("[Hooked] BuyPetEgg -> %s %s", method, tstr(args)))
        elseif remote.Name == "PetEggService" then
            local action = (typeof(args[1])=="string" and args[1]) or ""
            lastPayload.PetEggService = {remote=remote, method=method, args=args, action=action}
            table.insert(lastSvcList, 1, {ts=os.time(), action=action, info={remote=remote, method=method, args=args}})
            if #lastSvcList>10 then table.remove(lastSvcList, #lastSvcList) end
            appendLog(string.format("[Hooked] PetEggService(%s) -> %s %s", action, method, tstr(args)))
        end
    end

    if typeof(hookmetamethod)=="function" then
        local old; old = hookmetamethod(game, "__namecall", function(self, ...)
            local method = getnamecallmethod and getnamecallmethod() or ""
            if not checkcaller() then
                local args = {...}
                safe(record, self, method, args)
            end
            return old(self, ...)
        end)
        hooked = true
        appendLog("[Hook] using hookmetamethod.")
    else
        local gmt = getrawmetatable(game)
        local rw = (setreadonly and function(x) setreadonly(gmt, x) end) or function() end
        rw(false)
        local old = gmt.__namecall
        gmt.__namecall = newcclosure(function(self, ...)
            local method = getnamecallmethod and getnamecallmethod() or ""
            if not checkcaller() then
                local args = {...}
                safe(record, self, method, args)
            end
            return old(self, ...)
        end)
        rw(true)
        hooked = true
        appendLog("[Hook] using __namecall metatable.")
    end
end

