--========== REROLL (MENU 3) ==========--
-- Kita rekam payload terakhir dari remote yg relevan via __namecall hook
local lastPayload = {
    BuyPetEgg = nil,       -- {remote = Instance, method="InvokeServer"/"FireServer", args={...}}
    PetEggService = nil,   -- ditangkap apa adanya
}

-- Namecall hook
do
    local gmt = getrawmetatable(game)
    if setreadonly then setreadonly(gmt, false) end
    local oldNamecall = gmt.__namecall
    gmt.__namecall = newcclosure(function(self, ...)
        local method = getnamecallmethod and getnamecallmethod() or ""
        local args = {...}
        if typeof(self)=="Instance" and (method=="FireServer" or method=="InvokeServer") then
            if self.Name == "BuyPetEgg" then
                lastPayload.BuyPetEgg = {remote=self, method=method, args=args}
                appendLog(string.format("[Hooked] BuyPetEgg -> %s %s", method, game:GetService("HttpService"):JSONEncode(args)))
            elseif self.Name == "PetEggService" then
                lastPayload.PetEggService = {remote=self, method=method, args=args}
                appendLog(string.format("[Hooked] PetEggService -> %s %s", method, game:GetService("HttpService"):JSONEncode(args)))
            end
        end
        return oldNamecall(self, ...)
    end)
    if setreadonly then setreadonly(gmt, true) end
end

-- Kita juga log event server -> client (ReadyToHatch, Tutorial, dll)
local function hookServerEvents()
    local GE = RS:FindFirstChild("GameEvents")
    if not GE then return end
    local function hookEvent(ev, name)
        if ev and ev.OnClientEvent then
            ev.OnClientEvent:Connect(function(...)
                local arr = {...}
                local json = ""
                safe(function()
                    json = game:GetService("HttpService"):JSONEncode(arr)
                end)
                appendLog(string.format("[Event] %s %s", name, json))
            end)
            appendLog(string.format("[Hooked] %s", name))
        end
    end
    hookEvent(GE:FindFirstChild("EggReadyToHatch_RE"), "EggReadyToHatch_RE")
    hookEvent(GE:FindFirstChild("PetEggService"), "PetEggService")
    hookEvent(GE:FindFirstChild("EggTutorial"), "EggTutorial")
end
hookServerEvents()

