styleButton(Script3Btn, "ðŸŽ² Reroll Egg")
Script3Btn.Parent = Content
Script3Btn.MouseButton1Click:Connect(function()
	-- Jalankan reroll
	local ok, err = pcall(function()
		loadstring(game:HttpGet("https://raw.githubusercontent.com/permana29/Grow/refs/heads/main/RerollEgg"))()
	end)
	if not ok then
		warn("Reroll gagal: " .. tostring(err))
		return
	end

	-- Refresh ESP supaya hasil baru muncul
	task.delay(1, function()
		local container = getEggOracleGui()
		if container then
			toggleESP(container, false)
			task.wait(0.5)
			toggleESP(container, true)
		end
	end)
end)

